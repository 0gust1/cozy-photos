div#about
  div.clearfix
    div#links.clearfix
        p.back
            a.flatbtn(href="#albums")
                span.glyphicon.glyphicon-arrow-left.icon-white
                span= t("Back")
        p.startediting
             a.flatbtn(href="#albums/#{id}/edit")
                span.glyphicon.glyphicon-edit.icon-white
                span= t("Edit")
        p.stopediting
            a.flatbtn.stopediting(href="#albums/#{id}")
                span.glyphicon.glyphicon-floppy-disk.icon-white
                span= t("Stop editing")
        p.download
            a.flatbtn(href="#{downloadPath}")
                span.glyphicon.glyphicon-download-alt.icon-white
                span= t("Download")
        p.delete
            a.flatbtn.delete
                span.glyphicon.glyphicon-remove.icon-white
                span= t("Delete")
        p.clearance
            a.flatbtn.clearance
                span.glyphicon.glyphicon-share-alt.icon-white
                span= t("share")
    div#album-text
        div#album-text-background

            div.right
                p
                    span.photo-number= photosNumber
                    br
                    span= t("picture", {smart_count: photosNumber})

            form.left
                div
                    span.clearance-state
                        if clearance == 'public'
                            span.glyphicon.glyphicon-globe
                            | &nbsp;
                            | #{t('shared')}
                        else if clearance && clearance.length > 0
                            span.glyphicon.glyphicon-share-alt
                            | &nbsp;
                            | #{t('shared')}
                            if clearance.length
                                span &nbsp;(#{clearance.length})
                input#title(type="text", placeholder="#{t('title placeholder')}", value=title)
                textarea#description(placeholder="#{t('description placeholder')}")!= description

div#photos.clearfix
