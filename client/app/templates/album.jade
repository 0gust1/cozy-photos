div.row-fluid
  div#about.span4
    div#path
      a(href="#albums") &lt;
        span.hidden-phone Back
    h1#title #{title}
    div#description #{description}
  div#photos.span8

div.btn-group.editor
  a.delete.btn.btn-inverse
    i.icon-remove.icon-white
  if 'undefined' != typeof id
    a.stopediting.btn.btn-inverse(href="#albums/#{id}")
      i.icon-eye-open.icon-white
    a.startediting.btn.btn-inverse(href="#albums/#{id}/edit")
      i.icon-edit.icon-white
