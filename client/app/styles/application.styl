        border-radius: 0
        width: 300px
        height: 300px
        display: block
        opacity: 0

        padding-top: 135px
        font-size: 25px
        line-height: 25px
        text-align: center
        font-variant: small-caps
        color: white
        background-color: rgba(0,0,0,0.7)

        transition: all .2s ease-out

    &:hover
        .title
            opacity: 1

    a:active
        transition 0s ease-out
        -webkit-transition 0s ease-out
        box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)

