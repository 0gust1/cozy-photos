@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');

bgcolor = #fcfcfc
shadowcolor = #444
highlightcolor = orange
basecolor = lightgrey

body
  height 97%
  padding 1%
  background-color bgcolor
  font-family main

h1, h4
  font-family styled

.editor
  position absolute
  top 5px
  right 5px
  border-radius 3px

btn.delete
  position absolute
  top 1px
  right 1px
  z-index 2

// ### Logic ###
.mode-public .editor
.help
.helpedit
.editing .empty .help
.btn.delete
.btn.stopediting
.editing .btn.startediting
#album-list.empty .btn.startediting
#album-list.empty .btn.stopediting
  display none

.btn.startediting
.editing .btn.delete
.editing .btn.stopediting
  display inline-block

.empty .help
.editing .empty .helpedit
  display block


// #### album list page ###

.albumitem
  width 30%
  min-width 450px
  height 120px
  float left
  margin 15px
  padding 10px
  position relative

  a
    display block

  img
    box-sizing: border-box
    border 2px solid shadowcolor
    box-shadow: 3px 3px 3px shadowcolor
    border-radius 10px
    margin-right 10px
    width 100px
    height 100px
    transition .2s ease-out
    -webkit-transition .2s ease-out

  img:hover
    border 2px solid highlightcolor

  img:active
    transition 0s ease-out
    -webkit-transition 0s ease-out
    box-shadow: 0px 0px 0px shadowcolor

// #### album page ###

#about
  height 90%
  transition .4s ease-out
  -webkit-transition .4s ease-out

  #path
    margin-bottom 20px
    line-height 20px
    font-size 18.5px

    a
      display inline-block
      padding 5px 10px
      background-color basecolor
      border-radius 5px
      color white

      span
        margin-left 5px
    a:hover
      background-color highlightcolor
      text-decoration none

  #description
    text-align justify
    padding 1px
    border 0px


#photos
  min-height 300px

  .photo
    float left
    margin 5px
    position relative

    a
      display block
      width 75px
      height 68px
      vertical-align bottom
      overflow hidden
      background rgba(0,0,0,0.1)
      transition .4s ease-out
      -webkit-transition .4s ease-out
      border 1px solid transparent

      img
        width 100%
        height 100%

    a:hover
      border 1px solid white
      box-shadow 0 0 0 2px #FFF, 0 0 20px 5px #000
      transition .1s
      -webkit-transition:0.1s

  .photo:hover
    transform scale(1.5)
    -webkit-transform scale(1.5)
    z-index 3

    img
      transform scale(1.2)
      -webkit-transform scale(1.2)

.editing #photos.empty
  border 1px dashed basecolor

#photos.dragover
  background-color lightgreen


// # Remove effect from photobox //

#pbOverlay.show .imageWrap img,
#pbOverlay.show .imageWrap img,
#pbOverlay.on .imageWrap img,
#pbOverlay .imageWrap img,
#pbOverlay .imageWrap img.prepare,
#pbOverlay.hide .imageWrap img,
#pbOverlay.hide .imageWrap img.prepare,
#pbOverlay .imageWrap img.zoomable
  transform none
  -webkit-transform none
  -ms-transform none
  transition 0.01s
  -webkit-transition 0.01s
  -ms-transition 0.01s
  transition-delay 0s
  -webkit-transition-delay 0s
  -ms-transition-delay 0s